<div class="home-header">
    {{#if search}}
        <h1>Você está buscando por: <span style="color: rgb(165, 121, 0);">{{search}}</span></h1>
        {{#if toughtQty}}
        <p>Foram encontrados <span style="color: rgb(165, 121, 0);">{{toughtQty}} </span>pensamentos</p>
        {{else}}
         <p>Nenhum pensamento foi encontrado!</p>
        {{/if}}
    {{else}}
    <h1>Conheça alguns <span style="color: rgb(165, 121, 0);">Pensamentos</span></h1>
    {{/if}}
    <form action="/" method="get">
        <input type="text" name="search" id="search" placeholder="Está buscando por algo?">
        <input type="submit" class="btn" value="Buscar">
    </form>
    <div class="order-container">
        <span>Ordenar por:</span>
        <form action="/" method="get">
        <input type="hidden" name="search" value="{{this.search}}">
        <input type="hidden" name="order" value="new">
        <button type="submit"><i class="bi bi-arrow-up"></i></button>
        </form>
        <form action="/" method="get">
        <input type="hidden" name="search" value="{{this.search}}">
        <input type="hidden" name="order" value="old">
        <button type="submit"><i class="bi bi-arrow-down"></i></button>
        </form>
        <a href="/">Limpar</a>
    </div>
</div>
<div class="toughts-container">
    {{#each values}}
    <figure>
        <blockquote>
            "{{this.title}}"
        </blockquote>
        <figcaption>
            por <span>{{this.User.name}}</span>
        </figcaption>
    </figure>
    {{/each}}
</div>