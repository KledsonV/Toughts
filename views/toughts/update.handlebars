<div class="toughts-form-container">
    <a href="/toughts/dashboard">Voltar</a>
    <h1>
        Editando um pensamento:
    </h1>
    <form action="/toughts/update" method="post">
    <input type="hidden" name="id" value="{{tought.id}}">
    <div class="form-control">
    <label for="title">Pensamento:</label>
    <input type="text" name="title" id="title" value="{{tought.title}}">
    </div>
    <input type="submit" value="Editar">
    </form>
</div>